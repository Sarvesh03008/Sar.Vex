//Code 1//
#include<iostream>
using namespace std;
int main()
{
     int myintvar = 45;
     float myfloatvar = 45.8;
     double mydoublevar = 14.149;
     char mycharvar = '#';
     string mystringvar = "hello";
     bool myboolvar = true;

     cout<<"Value of my intvar is "<< myintvar<<endl;
     cout<<"Value of float is "<<myfloatvar<<endl;
     cout<<"Valur of Double is "<<mydoublevar<<endl;
     cout<<"Value of character is "<<mycharvar<<endl;
     cout<<"Value of boolean is "<<myboolvar<<endl;

}

//OUTPUT 2//
Value of my intvar is 45
Value of float is 45.8
Valur of Double is 14.149
Value of character is #
Value of boolean is 1
